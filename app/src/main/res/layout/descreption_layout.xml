<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#00B24B" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:visibility="invisible"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/v_des"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_tittle"
                    android:layout_below="@id/v_des"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="20dp"
                    android:text="To Build A Fire"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_author"
                    android:padding="5dp"
                    android:textSize="20dp"
                    android:layout_below="@id/tv_tittle"
                    android:layout_width="match_parent"
                    android:layout_height="35sp"
                    android:text="Jack London"
                    android:textAlignment="center"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tv_description"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:layout_below="@id/tv_author"
                    android:layout_width="match_parent"
                    android:layout_height="175sp"
                    android:text="A classic Man vesus Nature story set in the Yukon Territory in Northwestern Canada." />

                <Button
                    android:textColor="#FFFFFF"
                    android:text="START READING"
                    android:textAlignment="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="15dp"
                    android:id="@+id/btn_start_reading"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#00B24B"
                    android:layout_below="@+id/tv_description" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="45dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/iv_story"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/spiderman"/>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/backicon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/btn_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bookmark" />

</RelativeLayout>